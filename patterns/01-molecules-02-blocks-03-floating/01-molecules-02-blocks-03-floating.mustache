&lt;div class=&quot;block floating&quot;&gt;
	&lt;div class=&quot;floating-image&quot;&gt;
		{{# video}}
			{{&gt; atoms-video-16x9 }}
		{{/ video}}
		{{^ video}}
			{{&gt; atoms-landscape-16x9 }}
		{{/ video}}
	&lt;/div&gt;
	&lt;div class=&quot;floating-wrapper&quot;&gt;
		&lt;h2 class=&quot;h2 headline&quot;&gt;
			{{ headline.short }}
		&lt;/h2&gt;
		{{&gt; atoms-text }}
		{{# info}}
		&lt;div class=&quot;floating-info&quot;&gt;
			{{ info }}
		&lt;/div&gt;
		{{/ info}}
	&lt;/div&gt;
&lt;/div&gt;